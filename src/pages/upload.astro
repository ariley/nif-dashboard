---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Upload schedule">
  <main class="mx-auto dark">
    <!-- Upload Form -->
    <form class="max-w-lg mx-auto mt-40 bg-gray-800 p-10 rounded-lg " id="uploadForm">
      <!-- Title -->
      <h3 class="flex justify-center items-center mb-10 mt-10 text-4xl font-bold text-white">Upload new schedule</h3>

      <!-- File Input -->
      <div class="flex justify-center items-center mt-4">
        <!-- File Input with styling -->
        <input
          type="file"
          id="file"
          name="file"
          class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-default bg-gray-50 dark:text-gray-500 focus:outline-none dark:bg-gray-100 dark:border-gray-600 dark:placeholder-gray-400"
          aria-describedby="file_help"
        />
      </div>

      <!-- File Help Text -->
      <div class="mt-8 text-lg text-gray-500 dark:text-gray-300" id="file_help">
        Make sure to name the file "data.xlsx", and the file must be properly prepared for upload,
        <span class="text-red-500">otherwise it will break the schedule.</span>
      </div>

      <!-- Upload Button -->
      <div class="mt-10 flex justify-center items-center h-full">
        <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-lg">Upload</button>
      </div>

      <!-- Error and Success Messages -->
      <div id="error" class="mt-4 text-red-600"></div>
      <div id="success" class="mt-4 text-green-600"></div>
    </form>
  </main>
</Layout>

<script>
  // Handle the form submission and upload the file
  document.getElementById('uploadForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const errorDiv = document.getElementById('error');
    const successDiv = document.getElementById('success');
    errorDiv.textContent = '';
    successDiv.textContent = '';

    const fileInput = document.getElementById('file');
    const file = fileInput.files[0];

    if (!file) {
      console.log('No file selected');
      errorDiv.textContent = 'No file selected.';
      return;
    }

    console.log('File selected:', file.name);

    const formData = new FormData();
    formData.append('file', file);

    try {
      console.log('Uploading file...');
      const response = await fetch('http://localhost:3000/upload', {
        method: 'POST',
        body: formData,
      });

      console.log('Response status:', response.status);
      console.log('Response headers:', [...response.headers]);

      if (!response.ok) {
        const text = await response.text();
        console.log('Error response text:', text);
        throw new Error(text);
      }

      const result = await response.json();
      console.log('Upload result:', result);

      successDiv.textContent = result.message || 'File uploaded successfully.';
      // Redirect to home page after displaying success message
      setTimeout(() => {
        window.location.href = '/';
      }, 2000);
    } catch (err) {
      console.log('Upload error:', err);
      errorDiv.textContent = 'An error occurred: ' + err.message;
    }
  });
</script>
